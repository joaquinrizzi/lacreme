<h1>Services</h1>
<%= link_to "Retour", root_path %>
<%= simple_form_for @service do |f| %>
  <%= f.input :name, label: 'Nom du service' %>
  <%= f.input :price, label: 'Prix' %>
  <%= f.input :description, label: 'Description du service' %>
  <%= f.input :duration, label: 'Durée' %>
  <%= f.submit "Soumettre" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prix</th>
      <th>Description</th>
      <th>Durée</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.price  %> <small>€</small></td>
        <td><%= service.description %></td>
        <td><%= service.duration %> <small>min</small> </td>
        <td>
          <%= link_to t('services.index.edit'), edit_service_path(service) %>
          <%= link_to t('services.index.delete'), service, method: :delete, remote: true, data: { confirm: t('services.index.confirm') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
